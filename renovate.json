{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "group:allNonMajor"],
	"schedule": ["before 6am on Monday"],
	"timezone": "America/New_York",
	"labels": ["dependencies"],
	"automerge": true,
	"automergeType": "pr",
	"platformAutomerge": true,
	"packageRules": [
		{
			"description": "Auto-merge patch and minor updates",
			"matchUpdateTypes": ["patch", "minor"],
			"automerge": true
		},
		{
			"description": "Pin @whoplabs/whop-client (coordinated updates)",
			"matchPackageNames": ["@whoplabs/whop-client"],
			"rangeStrategy": "pin"
		},
		{
			"description": "Group AWS SDK updates",
			"matchPackagePatterns": ["@aws-sdk/*"],
			"groupName": "AWS SDK"
		},
		{
			"description": "Group Biome updates",
			"matchPackagePatterns": ["@biomejs/*", "biome"],
			"groupName": "Biome"
		}
	],
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security"]
	}
}
